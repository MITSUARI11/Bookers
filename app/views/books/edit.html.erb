<h1>Books#edit</h1>
<p>Find me in app/views/books/edit.html.erb</p>

<% if @book.errors.any? %>
  <%= @book.errors.count %>Error Occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
    
    <p>Title</p>
    <%= f.text_field :title %>
    
    <p>Body</p>
    <%= f.text_area :body %>
    
    <%= f.submit 'Update Book' %>

<% end %>
    

