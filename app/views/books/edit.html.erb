<% if @book.errors.any? %>
  <%= @book.errors.count %>Error Occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <div class="title-edit-field">TItle</div>
  <%= f.text_field :title %>
  
  <div class="body-edit-field">Body</div>
  <%= f.text_area :body %>
  
  <div class="update-book-button"><%= f.submit 'Update Book' %></div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
